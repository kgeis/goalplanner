    <% goal.milestones.each do |milestone| %>
      <%= form_for milestone do |m| %>
      <table class="<%= milestone.id %> hidden milestonetasks">
      <thead>
        <tr>
          <th colspan="4">
            <%= milestone.title %>
            <br />
            <br />
          </th>
        </tr>
        <tr>
          <th>task</th>
          <th>owner</th>
          <th>due date</th>
          <th>complete?</th>
        </tr>
      </thead>
      <tbody>

      <%= m.fields_for :tasks do |t| %>
        <%= t.text_field :title %>
          <tr>
          <td><%= t.label "task" %> <%= t.text_field :title %></td>
          <td><%= t.text_field :person_id %></td>
          <td><%= t.text_field :due_on %></td>
          <td class="center">
            <input data-remote="true" id="<%= task.id %>" class="complete_task" class="complete_task" type="checkbox" checked value="1">
          </td>
        </tr>
      <% end %>

      </tbody>
    </table>
    <% end %>
  <% end %>
