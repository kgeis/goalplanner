<%= render "layouts/app-title" %>
<%= render "layouts/separator-header", :separator_title => "forgot your password?" %>

<div class="table-box medium padded">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label "Give us your email to send password reset instructions." %>
  <div>
    <%= f.email_field :email, :autofocus => true %>
    <%= f.submit "send", :class => "btn btn-small devise_send" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>