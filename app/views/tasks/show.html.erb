<%= render 'layouts/app-title' %>
<%= render "layouts/separator-header", :separator_title => @task.title %>

<div class="table-box small padded">
<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @task.title %>
</p>

<p>
  <b>Description:</b>
  <%= @task.description %>
</p>

<p>
  <b>Owner:</b>
  <%= @task.person_id %>
</p>

<p>
  <b>Due on:</b>
  <%= @task.due_on %>
</p>

<p>
  <b>Is complete:</b>
  <%= @task.is_complete %>
</p>



  <div class="dialog_links">
    <%= link_to 'edit', edit_task_path(@task), :class => "fs-link" %>
    <%= link_to 'delete', @task, :class => "fs-link", method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'back to list', tasks_path, :class => "fs-link left" %>
  </div>
</div>