<%= render "layouts/separator-header", :separator_title => "add/edit goal" %>

<div class="table-box small padded">

<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :due_on %><br />
    <%= f.text_field :due_on, :id => :datepicker %>
  </div>
  <div class="field">
    <%= f.label :owner_id %><br />
    <%= f.number_field :owner_id %>
  </div>
  <div class="field">
    <%= f.label :is_complete %><br />
    <%= f.check_box :is_complete %>
  </div>
  <div class="field">
    <%= f.label :order %><br />
    <%= f.number_field :order %>
  </div>
  <div class="field">
    <%= f.label :milestone_id %><br />
    <%= f.number_field :milestone_id %>
  </div>
  <div class="actions">
    <%= link_to_submit 'save', :id => "link_to_submit", :class => "fs-link" %>
</div>
<% end %>
  <div class="dialog_links">
    <%= link_to 'cancel', @task, :id => "cancel", :class => "fs-link" %>
    <%= link_to 'delete', @task, method: :delete, data: { confirm: 'Are you sure?' }, :class => "fs-link left" %>
  </div>
