<%= render "layouts/separator-header", :separator_title => "add/edit milestone" %>

<div class="table-box small padded">
<%= form_for(@milestone) do |f| %>
  <% if @milestone.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@milestone.errors.count, "error") %> prohibited this milestone from being saved:</h2>

      <ul>
      <% @milestone.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :due_on %><br />
    <%= f.text_field :due_on, :id => :datepicker %>
  </div>
  <div class="field">
    <%= f.label :is_complete %><br />
    <%= f.check_box :is_complete %>
  </div>
  <div class="field">
    <%= f.label :order %><br />
    <%= f.number_field :order %>
  </div>
  <div class="field">
    <%= f.label :goal_id %><br />
    <%= f.number_field :goal_id %>
  </div>
  <div class="actions">
    <%= link_to_submit 'save', :id => "link_to_submit", :class => "fs-link link_to_submit" %>
    <%= link_to 'cancel', @milestone, :id => "cancel", :class => "fs-link link_to_submit" %>
  </div>
<% end %>
    <%= link_to 'back to list', milestone_path, :class => "fs-link left" %>
</div>
